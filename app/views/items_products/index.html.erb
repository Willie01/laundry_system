<p id="notice"><%= notice %></p>

<h1>Items Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Item number</th>
      <th>Status</th>
      <th>Logistics status</th>
      <th>Item price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items_products.each do |items_product| %>
      <tr>
        <td><%= items_product.product_id %></td>
        <td><%= items_product.item_number %></td>
        <td><%= items_product.status %></td>
        <td><%= items_product.logistics_status %></td>
        <td><%= items_product.item_price %></td>
        <td><%= link_to 'Show', items_product %></td>
        <td><%= link_to 'Edit', edit_items_product_path(items_product) %></td>
        <td><%= link_to 'Destroy', items_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

