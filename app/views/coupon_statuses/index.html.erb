<p id="notice"><%= notice %></p>

<h1>Coupon Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Coupon status name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupon_statuses.each do |coupon_status| %>
      <tr>
        <td><%= coupon_status.coupon_status_name %></td>
        <td><%= link_to 'Show', coupon_status %></td>
        <td><%= link_to 'Edit', edit_coupon_status_path(coupon_status) %></td>
        <td><%= link_to 'Destroy', coupon_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

