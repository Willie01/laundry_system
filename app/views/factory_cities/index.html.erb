<p id="notice"><%= notice %></p>

<h1>Factory Cities</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factory_cities.each do |factory_city| %>
      <tr>
        <td><%= factory_city.city_id %></td>
        <td><%= factory_city.longitude %></td>
        <td><%= factory_city.latitude %></td>
        <td><%= factory_city.status %></td>
        <td><%= link_to 'Show', factory_city %></td>
        <td><%= link_to 'Edit', edit_factory_city_path(factory_city) %></td>
        <td><%= link_to 'Destroy', factory_city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

