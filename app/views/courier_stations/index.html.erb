<p id="notice"><%= notice %></p>

<h1>Courier Stations</h1>

<table>
  <thead>
    <tr>
      <th>Courier</th>
      <th>Station</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courier_stations.each do |courier_station| %>
      <tr>
        <td><%= courier_station.courier_id %></td>
        <td><%= courier_station.station_id %></td>
        <td><%= courier_station.status %></td>
        <td><%= link_to 'Show', courier_station %></td>
        <td><%= link_to 'Edit', edit_courier_station_path(courier_station) %></td>
        <td><%= link_to 'Destroy', courier_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

