<p id="notice"><%= notice %></p>

<h1>Coupon Cities</h1>

<table>
  <thead>
    <tr>
      <th>Coupon</th>
      <th>City</th>
      <th>Start on</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupon_cities.each do |coupon_city| %>
      <tr>
        <td><%= coupon_city.coupon_id %></td>
        <td><%= coupon_city.city %></td>
        <td><%= coupon_city.start_on %></td>
        <td><%= coupon_city.status %></td>
        <td><%= link_to 'Show', coupon_city %></td>
        <td><%= link_to 'Edit', edit_coupon_city_path(coupon_city) %></td>
        <td><%= link_to 'Destroy', coupon_city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coupon City', new_coupon_city_path %>
